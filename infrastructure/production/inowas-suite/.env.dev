# ==============================================================================
# INOWAS Suite - Development Environment
# ==============================================================================

# ==============================================================================
# GENERAL
# ==============================================================================
COMPOSE_PROJECT_NAME=inowas_suite_development
DOMAIN=inowas.com

# Docker socket path
DOCKER_SOCKET=/var/run/docker.sock

# ==============================================================================
# TRAEFIK - Reverse Proxy
# ==============================================================================
# Use letsencrypt for Hetzner, tud-resolver for TU-Dresden
TRAEFIK_CERT_RESOLVER=letsencrypt

# Let's Encrypt Configuration
TRAEFIK_ACME_EMAIL=admin@inowas.com
TRAEFIK_ACME_LETSENCRYPT_CASERVER=https://acme-v02.api.letsencrypt.org/directory

# TU-Dresden CA Configuration (fill these if using tud-resolver)
TRAEFIK_ACME_TUD_CASERVER=
TRAEFIK_ACME_TUD_EAB_KID=
TRAEFIK_ACME_TUD_EAB_HMAC_ENCODED=

# ==============================================================================
# KEYCLOAK - Authentication
# ==============================================================================
KEYCLOAK_VERSION=25.0.1
KEYCLOAK_HOST=identity.${DOMAIN}

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=dev

# Keycloak Database
KEYCLOAK_POSTGRES_USER=keycloak
KEYCLOAK_POSTGRES_PASSWORD=dev
KEYCLOAK_POSTGRES_DB=keycloak

# ==============================================================================
# MORPHEUS - Main Application
# ==============================================================================
MORPHEUS_VERSION=dev
MORPHEUS_FRONTEND_HOST=dev.morpheus.${DOMAIN}
MORPHEUS_BACKEND_HOST=api.dev.morpheus.${DOMAIN}

# Backend Configuration
BACKEND_SECRET_KEY=dev-secret-key-not-for-production
BACKEND_MAX_CONTENT_LENGTH=10485760

# Keycloak Integration
BACKEND_KEYCLOAK_CLIENT_ID=morpheus-backend
BACKEND_KEYCLOAK_CLIENT_SECRET=dev-secret
BACKEND_KEYCLOAK_REALM=inowas_dev
BACKEND_KEYCLOAK_SERVER_URL=https://${KEYCLOAK_HOST}

# MongoDB
BACKEND_MONGO_INITDB_ROOT_USERNAME=root
BACKEND_MONGO_INITDB_ROOT_PASSWORD=dev-root
BACKEND_MONGO_HOST=morpheus-db
BACKEND_MONGO_PORT=27017
BACKEND_MONGO_USER=dev
BACKEND_MONGO_PASSWORD=dev

# RabbitMQ
RABBITMQ_DEFAULT_USER=dev
RABBITMQ_DEFAULT_PASS=dev
RABBITMQ_DEFAULT_VHOST=dev

# Celery
BACKEND_CELERY_BROKER=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@morpheus-mq:5672/${RABBITMQ_DEFAULT_VHOST}
BACKEND_CELERY_RESULT_BACKEND=rpc://

# Sentry (optional - leave empty for dev)
BACKEND_SENTRY_DSN=

# Sensors (optional)
BACKEND_MORPHEUS_SENSORS_UIT_FTP_HOST=ftp
BACKEND_MORPHEUS_SENSORS_UIT_FTP_USER=dev
BACKEND_MORPHEUS_SENSORS_UIT_FTP_PASSWORD=dev
BACKEND_MORPHEUS_SENSORS_UIT_FTP_PATH=/

# ==============================================================================
# MFVIZ - MODFLOW Visualizer
# ==============================================================================
MFVIZ_VERSION=dev
MFVIZ_HOST=dev.mfviz.${DOMAIN}

# ==============================================================================
# SIMPLETOOLS - Standalone Tools
# ==============================================================================
SIMPLETOOLS_VERSION=dev
SIMPLETOOLS_HOST=dev.tools.${DOMAIN}
