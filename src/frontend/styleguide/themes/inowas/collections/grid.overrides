/*******************************
         Theme Overrides
*******************************/

.ui.padded.grid.SimpleToolGrid:not(.vertically):not(.horizontally) {
  @media (max-width: @computerBreakpoint - 1 ) {
    margin: 0 -1rem !important;
  }
}


[data-variant="secondary"].ui.grid {
  
  & > .column:first-child {
    background: #FFFFFF;
    box-shadow: 9px 0 10px -11px #BABABA;
  }
}
