/*******************************
         Theme Overrides
*******************************/
@font-face {
  font-family: 'Accordion';
  src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype'),
  url(data:application/font-woff;charset=utf-8;base64,) format('woff')
;
  font-weight: normal;
  font-style: normal;
}

/* Dropdown Icon */
.ui.accordion .title .dropdown.icon,
.ui.accordion .accordion .title .dropdown.icon {
  font-family: Accordion;
  line-height: 1;
  backface-visibility: hidden;
  font-weight: normal;
  font-style: normal;
  text-align: center;
}

.ui.accordion .title .dropdown.icon:before,
.ui.accordion .accordion .title .dropdown.icon:before {
  content: '\f0da' /*rtl:'\f0d9'*/;
}

.ui.accordion .title,
.ui.accordion .title:not(.ui) {
  position: relative;
  border-bottom: 1px solid @ref-color-underline;
  display: flex;
  flex-direction: row-reverse;
  justify-content: left;
  align-items: center;
  padding-bottom: 5px;
  padding-right: 22px;
  padding-top: 0;
  color: #000;
  font-family: "Open Sans", sans-serif;
  font-size: 22px;
  font-weight: 600;
  line-height: 1.3;

  &:before {
    content: "\f105";
    position: absolute;
    right: -8px;
    display: inline-block;
    opacity: 1;
    margin: 0;
    width: 1.18em;
    height: 1em;
    font-family: 'Icons';
    font-style: normal;
    font-weight: normal;
    text-decoration: inherit;
    text-align: center;
    speak: none;
    font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    transition: transform 300ms ease;
  }

  span {
    font-size: 15px;
    font-weight: 400;
    letter-spacing: 0px;
    text-align: left;
    line-height: 25px;

    svg:not(.redIcon) {
      margin: 0 10px;
      max-width: 18px;
      height: 16px;
      margin-left: 15px;
    }

    .redIcon {
      background: #DD2727;
      width: 22px;
      height: 22px;
      border-radius: 50%;
      color: #fff;
      padding: 4px;
      box-sizing: border-box;
      margin-left: 15px;
    }
  }
}


.ui.accordion .title.active {
  &:before {
    transform: rotate(90deg);
  }
}

.ui.accordion > .title:not(:first-child) {
  margin-top: 30px;
}

.ui.accordion:not(.styled) .title ~ .content:not(.ui) {
  padding: 20px 0 0 0;
}


// Primary Accordion
.ui.accordion.accordionPrimary {

  & + .accordionPrimary {
    margin-top: 10px;
  }

  & > .title:not(:first-child) {
    margin-top: 10px;
  }

  .title {
    min-height: 30px;
    white-space: nowrap;
    overflow: hidden;
    background: @ref-color-underline;
    border: 0;
    padding: 0 38px 0 42px;
    color: @white;
    font-size: 13.5px;
    font-weight: 400;
    letter-spacing: 0px;
    text-align: left;
    line-height: 19px;

    &:before {
      font-size: 16px;
      right: 10px;
      top: 6px;
    }
  }
}

.movableList {

  .ui.accordion.accordionPrimary {

    .title ~ .content {
      background-color: transparent;
      transition: background-color 0.3s ease;
    }

    .title ~ .content:not(.ui) {
      padding: 0;
    }

    .title ~ .content.active {
      margin-bottom: -10px;
    }
  }
}


body > .movableItem {

  .ui.accordion.accordionPrimary {
    .title ~ .content.active {
      margin-bottom: 0;
      background-color: rgb(229, 229, 229);

      * {
        visibility: hidden;
        opacity: 0;
      }
    }
  }
}
