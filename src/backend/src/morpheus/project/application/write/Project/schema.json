            },
            "new_role": {
              "type": "string",
              "enum": [
                "owner",
                "admin",
                "editor",
                "viewer"
              ]
            }
          },
          "required": [
            "project_id",
            "member_id",
            "new_role"
          ]
        }
      }
    },
    "UpdateProjectMetadataCommand": {
      "type": "object",
      "properties": {
        "command_name": {
          "type": "string",
          "enum": [
            "update_project_metadata_command"
