            "name": {
              "type": "string",
              "example": "My Project"
            },
            "description": {
              "type": "string",
              "example": "This is my project"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "project_id"
          ]
        }
      }
    },
    "UpdateProjectVisibilityCommand": {
      "type": "object",
      "properties": {
        "command_name": {
          "type": "string",
          "enum": [
            "update_project_visibility_command"
          ],
          "example": "update_project_visibility_command"
        },
        "payload": {
          "type": "object",
          "properties": {
            "project_id": {
              "type": "string",
              "example": "e3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
            },
            "visibility": {
              "type": "string",
              "enum": [
                "public",
                "private"
              ]
            }
          },
          "required": [
            "project_id",
            "visibility"
          ]
        }
      }
    }
  }
