{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for ModelCommands",
  "definitions": {
    "ProjectCommands": {
      "oneOf": [
        {
          "$ref": "#/definitions/AddProjectMemberCommand"
        },
        {
          "$ref": "#/definitions/CreateProjectCommand"
        },
        {
          "$ref": "#/definitions/DeleteProjectCommand"
        },
        {
          "$ref": "#/definitions/RemoveProjectMemberCommand"
        },
        {
          "$ref": "#/definitions/UpdateProjectMemberRoleCommand"
        },
        {
          "$ref": "#/definitions/UpdateProjectMetadataCommand"
        },
        {
          "$ref": "#/definitions/UpdateProjectVisibilityCommand"
        }
      ]
    },
    "AddProjectMemberCommand": {
      "type": "object",
      "properties": {
        "command_name": {
          "type": "string",
          "enum": [
            "add_project_member_command"
          ],
          "example": "add_project_member_command"
        },
        "payload": {
          "type": "object",
          "properties": {
            "project_id": {
              "type": "string",
              "example": "e3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
            },
            "new_member_id": {
              "type": "string",
              "example": "e3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
            },
            "new_member_role": {
              "type": "string",
              "enum": [
                "owner",
                "admin",
                "editor",
                "viewer"
              ]
            }
          },
          "required": [
            "project_id",
            "new_member_id",
            "new_member_role"
          ]
        }
      }
    },
    "CreateProjectCommand": {
      "type": "object",
      "properties": {
        "command_name": {
          "type": "string",
          "enum": [
            "create_project_command"
          ],
          "example": "create_project_command"
        },
        "payload": {
          "type": "object",
          "properties": {
            "project_id": {
              "type": "string",
              "example": "e3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
            },
            "name": {
              "type": "string",
              "example": "My Project"
            },
            "description": {
              "type": "string",
              "example": "This is my project"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "project_id",
            "name",
            "description",
            "tags"
          ]
        }
      }
    },
    "DeleteProjectCommand": {
      "type": "object",
      "properties": {
        "command_name": {
          "type": "string",
          "enum": [
            "delete_project_command"
